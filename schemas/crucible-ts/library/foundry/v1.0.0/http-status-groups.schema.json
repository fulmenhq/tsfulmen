{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/crucible/library/foundry/v1.0.0/http-status-groups.schema.json",
  "title": "HTTP Status Groups",
  "description": "Grouped HTTP status codes for reuse in helper libraries",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[vV]?\\d+\\.\\d+\\.\\d+$"
    },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "codes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "integer",
                  "minimum": 100,
                  "maximum": 599
                },
                "reason": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "value",
                "reason"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "id",
          "name",
          "codes"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "groups"
  ],
  "additionalProperties": false
}
