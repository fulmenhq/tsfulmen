{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/config/repository/app-identity/v1.0.0/app-identity.schema.json",
  "title": "Fulmen Application Identity",
  "description": "Application identity metadata for Fulmen ecosystem projects",
  "type": "object",
  "required": [
    "app"
  ],
  "additionalProperties": false,
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "binary_name",
        "vendor",
        "env_prefix",
        "config_name",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "binary_name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]{0,62}[a-z0-9]$",
          "minLength": 2,
          "maxLength": 64,
          "description": "Lowercase slug for binary/executable name (kebab-case)"
        },
        "vendor": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]{0,62}[a-z0-9]$",
          "minLength": 2,
          "maxLength": 64,
          "description": "Lowercase vendor namespace (no hyphens, alphanumeric only)"
        },
        "env_prefix": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*_$",
          "minLength": 2,
          "maxLength": 64,
          "description": "Uppercase environment variable prefix (must end with underscore)"
        },
        "config_name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]{0,62}[a-z0-9]$",
          "minLength": 2,
          "maxLength": 64,
          "description": "Filesystem-safe config directory name (usually matches binary_name)"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200,
          "description": "One-line description of the application"
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "project_url": {
          "type": "string",
          "format": "uri",
          "description": "Primary project URL (repository, documentation site)"
        },
        "support_email": {
          "type": "string",
          "format": "email",
          "description": "Support/contact email for the project"
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
        },
        "repository_category": {
          "type": "string",
          "enum": [
            "cli",
            "workhorse",
            "service",
            "library",
            "pipeline",
            "codex",
            "sdk"
          ],
          "description": "Repository category from Fulmen taxonomy"
        },
        "registry_id": {
          "type": "string",
          "format": "uuid",
          "description": "Optional UUIDv7 for future registry/orchestration (experimental)"
        },
        "telemetry_namespace": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]{0,62}[a-z0-9]$",
          "description": "Namespace for metrics/logging (defaults to binary_name if not specified)"
        },
        "python": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "distribution_name": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9-]{0,62}[a-z0-9]$",
              "description": "PyPI distribution name (for setup.py/pyproject.toml)"
            },
            "package_name": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9_]{0,62}[a-z0-9]$",
              "description": "Python import package name (must be valid Python identifier)"
            },
            "console_scripts": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "entry_point"
                ],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Console script command name"
                  },
                  "entry_point": {
                    "type": "string",
                    "description": "Python entry point (module:function)"
                  }
                }
              },
              "description": "Console script entry points for setup.py/pyproject.toml"
            }
          },
          "description": "Python-specific packaging metadata (optional, for PyPI projects)"
        }
      },
      "description": "Optional metadata - additional properties allowed for extensibility"
    }
  }
}
